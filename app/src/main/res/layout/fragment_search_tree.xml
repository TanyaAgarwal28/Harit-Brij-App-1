<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SearchTreeFragment">

        <include
            android:id="@+id/upperlayoutuser"
            layout="@layout/upperlayoutuser"
            android:layout_width="match_parent"
            android:layout_height="265dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/strokebhagwa"
            android:ems="10"
            android:hint="@string/SearchByUTID"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:text=""
            app:layout_constraintEnd_toEndOf="@+id/upperlayoutuser"
            app:layout_constraintStart_toStartOf="@+id/upperlayoutuser"
            app:layout_constraintTop_toBottomOf="@+id/upperlayoutuser" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="34dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/searchicon_removebg_preview"
            app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName"
            app:layout_constraintTop_toTopOf="@+id/editTextTextPersonName" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_tree_recycler_view"
            android:layout_width="0dp"
            android:layout_height="323dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName"
            app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
