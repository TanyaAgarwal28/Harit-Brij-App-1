<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/treeListItemLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/treelist_01">


    <TextView
        android:id="@+id/tree_id_item"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="Text"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tree_image_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toEndOf="@+id/tree_image_item"
        app:layout_constraintTop_toTopOf="@+id/tree_image_item" />

    <ImageView
        android:id="@+id/tree_image_item"
        android:layout_width="42dp"
        android:layout_height="45dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/stroke1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43"
        app:srcCompat="@drawable/femaleavatar_removebg_preview" />
</androidx.constraintlayout.widget.ConstraintLayout>